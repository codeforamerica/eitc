<% content_for :form_card_title do %>
  Steps
<% end %>

<% content_for :form_card_content do %>
  <div class="form-card form-card--transition">
    <div class="form-card__header">
      <h1 class="form-card__title">How GetYourRefund.org works</h1>
    </div>

    <div class="form-card__content">

      <div class="vertical-steps">
        <div class="vertical-steps__step">
          <div class="emoji emoji--med emoji--page-facing-up"></div>
          <h3>Submit the tax documents you have.</h3>
          <p class="text--small with-padding-small">Take 10 minutes to snap pictures or upload your ID and tax documents. Afterwards, we’ll have you answer a few simple questions.</p>
        </div>
        <div class="vertical-steps__step">
          <div class="emoji emoji--med emoji--pencil"></div>
          <h3>We’ll prepare your taxes.</h3>
          <p class="text--small with-padding-small">Our IRS-certified tax volunteers will review your situation and documents. If they need more information, they will get in contact by text message.</p>
        </div>
        <div class="vertical-steps__step">
          <div class="emoji emoji--med emoji--phone"></div>
          <h3>We’ll review your taxes with you.</h3>
          <p class="text--small with-padding-small">Once your tax return is ready, our tax volunteers will schedule a call to review your tax situation.</p>
        </div>
        <div class="vertical-steps__step">
          <div class="emoji emoji--med emoji--mail"></div>
          <h3>If you want, we’ll file your taxes.</h3>
          <p class="text--small with-padding-small">If you choose to file your taxes, our tax volunteers will help you e-file your taxes.</p>
        </div>
        <div class="vertical-steps__step">
          <div class="emoji emoji--med emoji--dollar-sign"></div>
          <h3>Get your refund!</h3>
          <p class="text--small with-padding-small">You’ll usually get your refund within a month via check or direct deposit.</p>
        </div>
      </div>

      <div class="form-card__footer">
        <%= link_to next_path, class: "button button--primary with-padding-med" do %>
          Continue
          <i class="button__icon icon-arrow_forward"></i>
        <% end %>
      </div>

    </div>
  </div>
<% end %>

