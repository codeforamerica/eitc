<% content_for :form_card_title do %>
  Let us know how to best reach you.
<% end %>

<% content_for :form_card_content do %>
  <%= form_for @form, url: current_path, method: :put, local: true, builder: Cfa::Styleguide::CfaFormBuilder, html: { class: 'form-card' } do |f| %>
    <header class="form-card__header">
      <h1 class="form-card__title">Let us know how to best reach you.</h1>
    </header>
    <fieldset class="button-set with-padding-med">
      <div class="form-card__content">
        <%= f.cfa_input_field(:phone_number, 'What is your phone number?', type: 'tel', classes: ['form-width--phone with-padding-med']) %>
        <div class="with-padding-med">
          <p class="form-question" style="margin-bottom: 0;">Can this number receive text messages?</p>
          <p class="text--help">Our tax preparer will use this number to get in touch with you during the process.</p>
          <%= f.cfa_checkbox(:sms_enabled, "Yes, I can get texts", options: {classes: ['with-padding-med']}) %>
        </div>
        <%= f.cfa_input_field(:email, 'What is your email address?', type: 'email', classes: ['form-width--email with-padding-med']) %>

      </div>
      <div class="form-card__footer">
        <%= f.button :submit, class: 'button button--primary with-padding-small' do %>
          Continue
        <% end %>
      </div>
    </fieldset>
  <% end %>

<% end %>
