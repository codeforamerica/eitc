<% content_for :form_card_title do %>
  Questions
<% end %>

<% content_for :form_card_content do %>
  <div class="form-card form-card--transition">
    <div class="form-card__content">
      <%= render "components/molecules/progress_step_bar" %>
      <h1 class="form-card__title with-padding-small">Let's start with some basic information.</h1>

      <p>
        We'll ask about your household and filing status.
      </p>

      <%= link_to next_path, class: "button button--primary with-padding-med" do %>
        Continue
        <i class="button__icon icon-arrow_forward"></i>
      <% end %>
    </div>
  </div>
<% end %>
