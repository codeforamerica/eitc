<section class="slab slab--fold">
  <div class="grid">
    <div class="grid__item width-three-fourths">
      <h2>Get the refund you've earned</h2>
      <h1>Free non-profit tax help for <br>Colorado workers and their families</h1>
      <%= link_to "File online", "https://www.myfreetaxes.com/", class: "button button--cta" %>
      <%= link_to "Get in-person help", 'https://www.garycommunity.org/tax-help#gci-tax-app-filter-form', class: "button" %>
    </div>
  </div>
</section>
<section class="slab slab--dark slab--not-padded">
  <div class="grid">
    <div class="grid__item width-one-whole">
      <ul class="image-set">
        <li class="image-set__item">
          <a href="https://codeforamerica.org">
            <%= image_tag "CfALogo-White.svg", class: "image image--cfa-logo", alt: "Code for America" %>
          </a>
        </li>
        <li class="image-set__item">
          <a href="https://www.garycommunity.org/home">
            <%= image_tag "gary-community-investments-logo-white.png", class: "image image--gci-logo", alt: "Gary Community Investments" %>
          </a>
        </li>
        <li class="image-set__item">
          <a href="https://www.unitedway.org/">
            <%= image_tag "united-way-logo-white.svg", class: "image image--uw-logo", alt: "United Way" %>
          </a>
        </li>
        <li class="image-set__item">
          <a href="https://www.colorado.gov/cdle">
            <%= image_tag "cdle-logo.svg", class: "image image--cdle-logo", alt: "Colorado Department of Labor and Employment" %>
          </a>
        </li>
      </ul>
    </div>
  </div>
</section>
<section id="result" class="slab">
  <div class="form-card form-card--transition">
    <div class="emoji emoji--big emoji--money"></div>
    <h1>
      You're estimated EITC refund is:
      <br>
      <span class="figure color--green">
        <%= number_to_currency(refund_amount, precision: 0) %>
      </span>
    </h1>

    <h2>What next?</h2>
    <p>Get help filing for free</p>

    <div class="grid">
      <div class="grid__item width-one-half">
        <div class="emoji emoji--big emoji--map"></div>
        <h3>Find a tax site</h3>
        <p class="text--help">
          Get help in person or drop off your tax return. It's free for families with a household income of $55,000 or less.
        </p>
        <%= link_to "Find free tax sites", 'https://www.garycommunity.org/tax-help#gci-tax-app-filter-form', class: "button button--primary" %>
      </div>

      <div class="grid__item width-one-half">
        <div class="emoji emoji--big emoji--pencil"></div>
        <h3>File your taxes online</h3>
        <p class="text--help">
          Filing online is quick, convenient, and free if you make less than $66,000.
        </p>
        <%= link_to "MyFreeTaxes.com", "https://www.myfreetaxes.com/", class: "button button--primary" %>
      </div>
    </div>
  </div>
  <div class="grid text--centered">
    <div class="grid__item width-one-half shift-one-fourth">
      <div class="emoji emoji--big emoji--mail-open"></div>
      <h3 class="with-padding-med">Not ready to file yet?</h3>
      <p class="text--help">
        Not ready to file but want a reminder? Sign up here.
      </p>
      <%= link_to "Get a reminder", new_reminder_contact_path, class: "button button--primary" %>
    </div>
  </div>
</section>