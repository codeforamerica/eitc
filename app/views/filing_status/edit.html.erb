<% content_for :additional_head_content do %>
  <%= render "shared/facebook_pixel" %>
<% end %>


<% content_for :content do %>
  <section class="slab text--centered">
    <div class="grid">
      <div class="grid__item width-two-thirds shift-one-sixth">
        <div class="with-padding-med">
          <h2 class="h2">Estimate your refund</h2>
          <p>Use our calculator to see how much money you could get back.</p>
        </div>

        <%= form_for @form, url: current_path, method: :put, local: true, builder: Cfa::Styleguide::CfaFormBuilder, html: { id: "status_form", class: 'form-card form-card--transition' } do |f| %>

          <%= render "components/molecules/progress_step_bar" %>
          <fieldset class="with-padding-large">
            <legend>
              <h1 class="form-question">What's your <strong>filing status</strong>?</h1>
            </legend>

            <%= f.button :submit, name: form_name + '[status]', value: 'single', class: "button" do %>
              <span class="emoji emoji--star"></span>
              Single
            <% end %>
            <%= f.button :submit, name: form_name + '[status]', value: 'joint', class: "button" do %>
              <span class="emoji emoji--double-stars"></span>
              Married
            <% end %>
          </fieldset>
        <% end %>
      </div>
    </div>

    <h2 class="h2 with-padding-med">
      Get help filing for free
    </h2>
    <%= render 'shared/filing_option_action_busts' %>
  </section>

  <section class="slab slab--testimonial">
    <div class="grid">
      <div class="grid__item">
        <p class="text--quote-overlay width-one-third">
          “I got everything I needed for my baby girl. I got it right before she was born so it really helped get the last minute things we needed.”
        </p>
      </div>
    </div>
  </section>

  <section class="slab slab--padded">
    <%= render 'shared/reminder_action_bust' %>
  </section>
<% end %>