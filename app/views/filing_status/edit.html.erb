
<% content_for :content do %>
  <section class="slab slab--padded text--centered">
    <div class="grid">
      <div class="grid__item width-two-thirds shift-one-sixth">
        <h2 class="h2">Estimate your refund</h2>
        <p>Use our calculator to see how much money you could get back.</p>

        <%= form_for @form, url: current_path, method: :put, local: true, builder: Cfa::Styleguide::CfaFormBuilder, html: { id: "status_form", class: 'form-card form-card--transition' } do |f| %>

          <%= render "components/molecules/progress_step_bar" %>
          <fieldset>
            <legend>
              <h1 class="form-question">What's your <strong>filing status</strong>?</h1>
            </legend>

            <%= f.button :submit, name: form_name + '[status]', value: 'single', class: "button" do %>
              <span class="emoji emoji--star"></span>
              Single
            <% end %>
            <%= f.button :submit, name: form_name + '[status]', value: 'joint', class: "button" do %>
              <span class="emoji emoji--star"></span>
              Married
            <% end %>
          </fieldset>
        <% end %>
      </div>
    </div>

    <h2 class="h2">
      Get help filing for free
    </h2>
    <%= render 'shared/filing_option_lead_ins' %>
  </section>
<% end %>