
<% content_for :form_card_title do %>
  Thanks for your interest!
<% end %>

<% content_for :form_card_content do %>
  <%= form_for @research_contact, builder: Cfa::Styleguide::CfaFormBuilder, url: { action: 'create' }, html: { class: 'form-card form-card--transition' } do |f| %>
    <div class="form-card__header">
      <h1 class="form-card__title">Thanks for your interest!</h1>
      <p class="text--help">
        If selected for our research, weâ€™ll reach out for an interview.
        Participants will receive an Amazon or Visa gift card as a thank you for their time.
      </p>
    </div>
    <div class="form-card__content">
      <%= f.cfa_input_field(:full_name, 'What is your full name?', classes: ['form-width--name']) %>
      <%= f.cfa_input_field(:email, 'What is your email address?', type: 'email', classes: ['form-width--name']) %>
      <%= f.cfa_input_field(:phone_number, 'What is your phone number?', type: 'tel', classes: ['form-width--phone']) %>
    </div>
    <div class="form-card__footer">
      <%= f.submit 'Register', class: "button button--cta with-padding-med" %>

      <div>
        <%= link_to "No thanks, see my refund", estimate_screens_path + "#result" %>
      </div>
    </div>
  <% end %>
<% end %>